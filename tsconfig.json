{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "nodenext", 
    "outDir": "./dist", // Output directory for JavaScript files
    "rootDir": "./src",
    "baseUrl":"./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM"],
    "strict": false
  },
  "include": ["src/**/*.ts" , "*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}
