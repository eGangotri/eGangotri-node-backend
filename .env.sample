# Google AI API key for renamePdfsViaAI.ts (REQUIRED)
# Get your API key from https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Optional custom endpoint for Google AI API
# Default: https://generativelanguage.googleapis.com/v1beta/models/gemini-1.5-pro:generateContent
# AI_ENDPOINT=https://custom-endpoint-if-needed.com

# MongoDB connection string
MONGO_CONNECTION=mongodb://localhost:27017/egangotri

# Other environment variables...
 
 ########################################
 # Server and Database (examples; adjust as needed)
 # Upload DB used by upload workflows
 MONGO_DB_NAME_FOR_UPLOAD=egangotri_upload_db
 
 # Backend servers
 SERVER_URL=http://localhost:8000
 PYTHON_SERVER_URL=http://localhost:7000
 
 # Primary DB used by backend for daily reports, etc.
 MONGO_DB_NAME=egangotridb
 
 # MongoDB Atlas connection parts (leave user/pwd blank in sample)
 MONGO_ATLAS_USER=
 MONGO_ATLAS_PWD=
 MONGO_DB_PROTOCOL=mongodb+srv://
 MONGO_DB_PATH=
 MONGO_DB_SUFFIXES=?retryWrites=true&w=majority
 
 # App port
 PORT=8000
 
 # Processing limits
 MAX_GOOGLE_DRIVE_ITEM_PROCESSABLE=2000
 
AI_BASE_URL=https://generativelanguage.googleapis.com/
AI_API_VERSION=v1/models/
AI_MODEL=gemini-2.5-flash
AI_METHOD=:generateContent
 
AI_MAX_OUTPUT_TOKENS=8192
AI_INLINE_MAX_MB=15
AI_MAX_RETRIES=5
AI_BATCH_SIZE=1
AI_DELAY_BETWEEN_CALLS_MS=5000
AI_DELAY_BETWEEN_BATCHES_MS=10000

########################################
# Google Drive OAuth
# Choose a scope:
# - Read-only (recommended for download-only): https://www.googleapis.com/auth/drive.readonly
# - Full access (read/write): https://www.googleapis.com/auth/drive
GOOGLE_DRIVE_API_SCOPE=https://www.googleapis.com/auth/drive

# OAuth client credentials (from Google Cloud Console)
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=

# Redirect URI used during OAuth flow
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/callback

# Paste refresh token obtained via the OAuth helper (leave blank in sample)
GOOGLE_DRIVE_REFRESH_TOKEN=
